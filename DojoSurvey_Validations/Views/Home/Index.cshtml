@model Survey

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dojo Survey</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>
    <h1 class="text-center text-primary">Dojo Survey</h1>
    <div class="border border-dark rounded container-sm col-6 bg-secondary text-light overflow-auto">
        <form asp-controller="Home" asp-action="Create" method="post" class="mt-3" >
            <div class="mb-3">
                <label asp-for="Name">Your Name:</label>
                <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
                <input type="text" name="Name" asp-for="Name">
            </div>
            <div class="mb-3">
                <label asp-for="Location">Dojo Location:</label>
                <span asp-validation-for="Location" class="text-danger font-weight-bold"></span>
                <select name="Location" id="Location" asp-for="Location">
                    <option value="Online">Online</option>
                    <option value="Los Angeles">Los Angeles</option>
                    <option value="Houston">Houston</option>
                    <option value="San Jose">San Jose</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Language">Favorite Language:</label>
                <span asp-validation-for="Language" class="text-danger font-weight-bold"></span>
                <select name="Language" id="Language" asp-for="Language">
                    <option value="Python">Python</option>
                    <option value="MERN">MERN</option>
                    <option value="Java">Java</option>
                    <option value="C#">C#</option>
                    <option value="Web Fundamentals">Web Fundamentals</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Comment">Comment (optional):</label>
                <span asp-validation-for="Comment" class="text-danger font-weight-bold"></span>
                <br>
                <textarea name="Comment" id="Comment" cols="60" rows="3" asp-for="Comment"></textarea>
            </div>
            <button type="submit" class="btn btn-primary float-end mb-2">Submit</button>
        </form>
    </div>
    

</body>

</html>