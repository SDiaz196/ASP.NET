<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>
    <nav class="border-bottom border-dark d-flex justify-content-between ">
        <h1>Welcome @Context.Session.GetString("UserName") !</h1>
        @{
            if (Context.Session.GetString("UserName") != null)
            {
                <form asp-controller="Home" asp-action="Clear" method="post">
                    <button class="btn btn-danger">Log out</button>
                </form>
            }
        }
    </nav>
    <div class="container-sm col-2">
        <h1>@Context.Session.GetInt32("Num")</h1>
        <div class="d-flex justify-content-between">
            <form method="post" asp-action="Num" asp-controller="Home">
                <input type="hidden" name="action" value="add">
                <button class="btn btn-warning btn-lg" type="submit">+ 1</button>
            </form>
            <form method="post" asp-action="Num" asp-controller="Home">
                <input type="hidden" name="action" value="subtract">
                <button class="btn btn-primary btn-lg" type="submit">- 1</button>
            </form>
        </div>
        <div class="d-flex justify-content-between mt-3">
            <form method="post" asp-action="Num" asp-controller="Home">
                <input type="hidden" name="action" value="multiply">
                <button class="btn btn-danger btn-lg" type="submit">x 2</button>
            </form>
            <form method="post" asp-action="Num" asp-controller="Home">
                <input type="hidden" name="action" value="random">
                <button class="btn btn-success" type="submit">+ Random</button>
            </form>
        </div>
    </div>
</body>

</html>